<% posts.each do |post| %>
  <div>
    <div class="post">
      <%= escape_html post["text"] %>
    </div>
    <div class="post-image">
        <img src="/uploads/<%= post["img_file_name"]%>" alt="<%= post["img_file_name"]%>" class="ex-image"/>
    </div>
    <div class="tools">
      <span class="add-star" data-post-id="<%= post["id"] %>"><%= post["star_count"] %></span>
    </div>
  </div>
<% end %>

<div class="submit">
  <form method="post" id="ex-from" action="/" enctype="multipart/form-data">
    <div class="form-text">
        <textarea name="ex_text" id="ex-text"></textarea>
    </div>
    <div class="form-file">
      <input type="file" name="file" value="file">
    </div>
    <div class="form-submit">
      <input type="submit" name="submit">
    </div>
  </form>
</div>
